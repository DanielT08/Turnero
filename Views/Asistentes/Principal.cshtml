@{
    ViewData["Asistentes"] = "Principal Page";
    <link rel="stylesheet" href="~/css/Principal.css" asp-append-version="true" />
}

<div class="container">
    <div class="row">
        <div class="d-flex">
            <div class="col-8  m-2">
                <div class="d-flex justify-content-between p-2 m-4">
                    <a type="button" class="btn option btn-sm btn-primary shadow" asp-controller="Asistentes" asp-action="Principal">Gestión de turnos y citas</a>
                    <a type="button" class="btn option2 btn-sm btn-outline-dark shadow" asp-controller="Asistentes" asp-action=""> Historial de turno</a>
                </div>

                <div class="d-flex justify-content-between p-2">
                    <a type="button" class="btn opcion1 btn-info" asp-controller="Asistentes" asp-action="">Llamar turno especifico</a>
                    <a type="button" class="btn opcion1 btn-success" asp-controller="Asistentes" asp-action="">Llamar</a>
                </div>

                <div class="d-flex justify-content-between p-2">
                    <a type="button" class="btn opcion1 btn-warning" asp-controller="Home" asp-action="Index">Crear</a>
                    <a type="button" class="btn opcion1 btn-danger" asp-controller="Asistentes" asp-action="">Reusar</a>
                </div>

                <div class="d-flex justify-content-center p-2">
                    <button type="button" class="btn opcion1 btn-secondary" data-bs-toggle="modal" data-bs-target="#modalPausaTurno">
                    Pausar
                    </button>

                    <div class="modal fade" id="modalPausaTurno" tabindex="-1" aria-labelledby="modalPausaTurnoLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="modalPausaTurnoLabel">Motivo de pausa</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>Seleccione el motivo por el que desea pausar el turno:</p>

                            <form>
                            <div class="form-group">
                                <input type="radio" id="radioBaño" name="motivoPausa" value="baño" checked>
                                <label for="radioBaño">Ir al baño</label>
                            </div>
                            <div class="form-group">
                                <input type="radio" id="radioAlmuerzo" name="motivoPausa" value="almuerzo">
                                <label for="radioAlmuerzo">Almorzar</label>
                            </div>
                            <div class="form-group">
                                <input type="radio" id="radioLaboresAdministrativas" name="motivoPausa" value="laboresAdministrativas">
                                <label for="radioLaboresAdministrativas">Labores administrativas</label>
                            </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="button" class="btn btn-primary" id="btnPausarTurno">Pausar turno</button>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>

                <div class="d-flex justify-content-around p-2">
                    <a type="button" class="btn option3 btn-primary shadow module-button" data-module="modulo1">Modulo 1</a>
                    <a type="button" class="btn option3 btn-primary shadow module-button" data-module="modulo2">Modulo 2</a>
                    <a type="button" class="btn option3 btn-primary shadow module-button" data-module="modulo3">Modulo 3</a>
                    <a type="button" class="btn option3 btn-primary shadow module-button" data-module="modulo4">Modulo 4</a>
                    <a type="button" class="btn option3 btn-primary shadow module-button" data-module="modulo5">Modulo 5</a>
                </div>
             </div>

            <div class="col-4 tablero mt-5">
                    <div class="card-body p-1 ">
                        <div class="d-flex justify-content-center align-items-center mb-5 p-2">
                            <p class="turnod me-4">Turnos disponibles</p>
                            <p class="turnoe ms-2">Turnos en espera: 29</p>
                        </div>
                        <table class="table table-striped ">
                            <thead>
                                <tr>
                                    <th>Servicio</th>
                                    <th>Pendientes</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Pago de facturas</td>
                                    <td>10</td>
                                </tr>
                                <tr>
                                    <td>Solicitud de citas</td>
                                    <td>6</td>
                                </tr>
                                <tr>
                                    <td>Autorización medicamentos</td>
                                    <td>8</td>
                                </tr>
                                <tr>
                                    <td>Información general</td>
                                    <td>5</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>                
            </div>

        </div>
    </div>
</div>

